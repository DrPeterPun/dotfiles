# funcao de abrir cenas com o default
open(){
    for i
    do xdg-open $i &
    done
}

#reload zsh
alias szsh="source ~/.zshrc"

#alias do vim
alias vm="nvim"
alias vim="nvim"
alias nvm="nvim"

# alias de nova comand line
alias cmd="alacritty &"

alias qq="exit"

alias pyenv="source bin/activate"
#
# adicionar o latex ao path
PATH="/usr/local/texlive/2023/bin/x86_64-linux:$PATH"

# alias git 
alias ga="git add"
alias gaa="git add ."
alias gp="git push"
alias gpl="git pull"

# git commit
gcm() {
    # Get all arguments after the command keyword
    local args="${@#gcm }"
    # Print the arguments
    git commit -m "$args"
}


# git add commit push
gga() {
    # Get all arguments after the command keyword
    local args="${@#gcm }"
    git add -A
    # Print the arguments
    git commit -m "$args"
    git push
}

# git commit push
gcp() {
    # Get all arguments after the command keyword
    local args="${@#gcm }"
    # Print the arguments
    git commit -m "$args"
    git push
}
